<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:elevation="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/FirstNameSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="First Name"
                android:inputType="text"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/LastNameSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Last Name"
                android:inputType="text"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EmailSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/PhoneSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Phone"
                android:inputType="phone"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/PasswordSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rePasswordSitter"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Re-Password"
                android:inputType="textPassword"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/priceofhour"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:hint="Price Of Hour"
                android:inputType="numberDecimal"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/SkillSitter"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:ems="15"
                android:gravity="top"
                android:hint="Skills"
                android:inputType="textMultiLine"
                android:lines="5"
                android:singleLine="false"
                android:textColorHint="@color/text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="signup"
                    android:textColor="@color/btnSignIn"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="cancle"
                    android:textColor="@color/btnSignIn"
                    android:textSize="24sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>